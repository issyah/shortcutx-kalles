                    <div data-ntajax-container data-ntajax-options='{"id":"{{sid}}","type":"{{typeAjax}}","isProduct":false,"updateURL":true,"updateURLPrev":true}' class="t4s-col-item t4s-main-portfolio-page t4s-main-area">
