                            {%- endif -%} 
                        </div>     
                    </{{ARRhtml[0]}}> 
                    {%- for i in (1..3) -%}
                        {%- liquid
                            assign product   = 'product_' | append:i
                            assign pos_t     = 'pos_t_' | append:i
                            assign pos_l     = 'pos_l_' | append:i
                            assign pos_popup = 'pos_popup_' | append:i
                            assign cl_pin    = 'cl_pin_' | append:i
