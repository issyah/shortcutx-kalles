            "default": 30
        },
        {
            "type": "header",
            "content": "2. General options"
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "Text alignment",
            "default": "center",
            "options":[
                {
                    "label":"Left",
                    "value":"start"
